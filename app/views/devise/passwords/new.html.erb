<h1 class="text-3xl font-bold mt-8 mb-6 text-center"><%= t('.forgot_your_password') %></h1>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex justify-center">
    <div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered flex items-center gap-2 w-full" %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "btn mt-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
