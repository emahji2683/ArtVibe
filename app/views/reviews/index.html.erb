<p style="color: green"><%= notice %></p>

<% content_for :title, "review" %>

<h1 class="text-7xl text-center">Reviews</h1>
<div id="reviews" class="grid grid-flow-row-dense grid-cols-3 gap-2">
  <% @reviews.each do |review| %>
    <div><%= render review %></div>
  <% end %>
</div>

<%= link_to "New review", new_review_path, class: "btn btn-primary" %>

