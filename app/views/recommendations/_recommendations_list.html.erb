<div class="mt-6">
  <h2 class="text-xl font-bold mb-4">おすすめのミュージアム</h2>
  <% if recommended_museums.present? %>
    <% recommended_museums.each do |museum| %>
      <div class="card bg-white shadow-md rounded-md p-4 mb-4">
        <p><strong>名前:</strong> <%= museum["name"] %></p>
        <p><strong>所在地:</strong> <%= museum["location"] %></p>
        <p><strong>営業時間:</strong> <%= museum["business_hours"] %></p>
        <p><strong>入館料:</strong> <%= museum["admission_fees"] %></p>
        <p><strong>公式サイト:</strong> <%= link_to museum["website_url"], museum["website_url"], target: "_blank", rel: "noopener" %></p>
        <p><strong>電話番号:</strong> <%= museum["phone_number"] %></p>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500">おすすめのミュージアムはありません。</p>
  <% end %>
</div>
