<%= search_form_for @q, url: museums_path, method: :get, html: { class: "space-y-4" } do |f| %>
  <div class="flex items-center">
    <!-- 検索フィールド -->
    <div class="flex-1">
      <%= f.search_field :name_or_location_cont, class: "input input-bordered input-primary w-full", placeholder: "名前または場所" %>
    </div>
    
    <!-- 検索ボタン -->
    <div>
      <%= f.submit "検索", class: "btn btn-primary btn-m" %>
    </div>
  </div>
<% end %>
